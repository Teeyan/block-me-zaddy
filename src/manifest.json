{
    "name": "Block Me Zaddy",
    "version": "0.1",
    "description": "Minimal URL Block List",
    "manifest_version": 2,
    "background": {
    	"scripts": ["js/background.js"],
    	"persistent": true
    },
    "permissions": [
    	"activeTab",
    	"webRequest",
    	"webRequestBlocking",
    	"storage",
    	"windows",
    	"tabs",
    	"https://*/*",
    	"http://*/*"
    ],
    "browser_action": {
    	"default_popup": "html/popup.html",
        "default_icon": {
            "16": "resources/logo-16.png",
            "48": "resources/logo-48.png",
            "64": "resources/logo-64.png",
            "128": "resources/logo-128.png"
        }
    },
    "web_accessible_resources": [
        "html/redirect.html"
    ]
}